const mongoose = require('mongoose');

// Schema für einzelne Bewertungen
const reviewSchema = new mongoose.Schema({
  description: String,
  username: String,
  numericStarRating: Number
});

// Haupt-Schema für Restaurants
const restaurantSchema = new mongoose.Schema({

  id: String,
  name: String,
  category: String,
  location: String,
  state: String,
  pic: String, // Pfad zum Bild oder URL
 
  reviews: [{ 
    description: String, 
    username: String, 
    starRating: Number
}],

  averageRating: { type: Number, default: 0 }, // Durchschnittsbewertung
  descriptions: [reviewSchema] // Verwendung des Review-Schemas für Bewertungen
});

// Modell erstellen
const Restaurant = mongoose.model('Restaurant', restaurantSchema);

module.exports = Restaurant;